<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            tools:text="N"
            style="@style/Initial.Text"
            android:background="@drawable/circle_bg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/text_initial"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/text_main"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_sub" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>

    <TextView
            tools:text="Username : thelimitbreaker"
            android:layout_width="0dp"
            android:id="@+id/text_main"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            style="@style/Basic.Text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/text_initial"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>

    <TextView
            tools:text="Post : little desc"
            style="@style/Basic.Text"
            android:layout_width="0dp"
            android:id="@+id/text_sub"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_main"
            app:layout_constraintStart_toEndOf="@+id/text_initial" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

    <View
            android:id="@+id/divider"
            android:background="?color_divider"
            android:layout_width="0dp"
            android:layout_height="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_sub"
            app:layout_constraintStart_toStartOf="@+id/text_sub"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>