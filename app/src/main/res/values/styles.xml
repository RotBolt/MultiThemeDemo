<resources>


    <style name="Initial.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?color_item_background</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Basic.Text" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/pad_large</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorText</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
